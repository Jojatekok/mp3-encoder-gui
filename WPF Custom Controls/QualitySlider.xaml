<UserControl x:Class="WpfCustomControls.QualitySlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Slider x:Name="Slider1" IsDirectionReversed="True" IsSnapToTickEnabled="True" TickPlacement="BottomRight" Margin="3" ValueChanged="Slider1_ValueChanged"/>
        <TextBlock x:Name="TextBlock1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,3"/>
    </Grid>
</UserControl>
