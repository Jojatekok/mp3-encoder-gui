<UserControl x:Class="MP3EncoderGUI.UserControls.VbrQualitySlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Slider x:Name="SliderVbrQuality" Minimum="0" Maximum="9" IsDirectionReversed="True" IsSnapToTickEnabled="True" TickPlacement="BottomRight" Margin="3" ValueChanged="SliderVbrQuality_ValueChanged"/>
        <TextBlock x:Name="TextBlockVbrQuality" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,3"/>
    </Grid>
</UserControl>
